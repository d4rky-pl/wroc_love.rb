!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %title wroc_love.rb
    %link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/main.css", :media => "screen"}

    = render 'analytics'
    = render 'speakers'
    = render 'supporters'
    = render 'error'

  %body
    %header#top
      .container
        %h1.logo
          %img{:src => '/images/logo.png', :alt => 'wroc_love.rb'}
        %nav.topnav
          %ul.horizontal
            %li
              %a.newsletter{:href => 'http://eepurl.com/iaSvw', :target => '_blank'} Newsletter
            %li
              %a.twitter{:href => 'https://twitter.com/wrocloverb'} Follow us
        %h2.info
          March 1-3rd 2013
          %br
          Wrocław
          %strong Poland

        %ul.actions.horizontal
          %li
            %a.button.dark{:href => 'https://tito.io/wrocloverb/2013'} Buy tickets
          %li
            %a.button.light{:href => 'http://cfp.wrocloverb.com/'} Call for Papers

    %section.main_section.container
      = yield

    %footer
      .container
        %article.location
          %h1 Location
          %h2 University of Wrocław, Institute of Computer Science

          .map
            %img{:src => '/images/staticmap.png', :alt => "University of Wrocław, Institute of Computer Science"}

        %nav.bottomnav
          %ul.horizontal
            %li
              %a{:href => '#top'}
                %img{:src => '/images/logo-small.png', :alt => 'wroc_love.rb'}
            %li
              %a{:href => 'http://blog.wrocloverb.com/'} Blog
            %li
              %a{:href => 'https://tito.io/wrocloverb/2013'} Buy tickets
            %li
              %a{:href => 'http://cfp.wrocloverb.com/'} Call for Papers
            %li
              %a{:href => 'http://eepurl.com/iaSvw', :target => '_blank'} Newsletter
            %li
              %a{:href => 'https://twitter.com/wrocloverb'} Follow us
